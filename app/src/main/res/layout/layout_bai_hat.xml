<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_ten_bai_hat_bai_hat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:textSize="25dp"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/txt_ten_ca_si_bai_hat"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:textSize="15dp"
        android:layout_gravity="center"
        />
    <ImageView
        android:id="@+id/img_disc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/dia"/>
    <ImageView
        android:id="@+id/img_yeu_thich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hate"
        android:tag="love"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/txt_yeu_thich"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm vào danh sách yêu thích"
        android:textColor="@color/textcolor"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_start"
            android:textSize="20dp"
            android:text="00:00"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_end"
            android:textSize="20dp"
            android:text="03:00"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <SeekBar
        android:layout_marginTop="5dp"
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@+id/layout_button"
        />
    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/ic_previous"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/img_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/ic_pause"
            android:layout_marginRight="20dp"
            android:tag="play"/>

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/ic_next" />


    </LinearLayout>
</LinearLayout>